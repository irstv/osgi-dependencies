        <module>org.eclipse.sisu.plexus-osgi</module>
        <module>sisu-guice-osgi</module>
        <module>sisu-guava-osgi</module>
        <module>aether/aether-transport-file-osgi</module>
        <module>aether/aether-transport-http-osgi</module>
        <module>httpclient-osgi</module>
        <module>httpcore-osgi</module>
        <module>commons-codec-osgi</module>
        <module>codemodel-osgi</module>
        <module>xz-osgi</module>
        <module>commons-math-osgi</module>
        <module>joda-time-osgi</module>
