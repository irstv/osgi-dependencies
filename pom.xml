    <groupId>org.orbisgis</groupId>
    <artifactId>osgi-dependencies</artifactId>
    <packaging>pom</packaging>
    <version>1.0</version>
    <name>OSGI Dependencies</name>
    <organization>
        <name>IRSTV CNRS-FR-2488</name>
        <url>http://www.irstv.fr/</url>
    </organization>
    <url>http://www.orbisgis.org</url>
    <modules>
        <module>trove-osgi</module>
        <module>jcommon</module>
        <module>jfreechart</module>
        <module>servlet-api</module>
        <module>jts-osgi</module>
